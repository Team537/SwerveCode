#ifndef THING_H
#define THING_H
#include "Schematic.h"
#include "cmath"
#include "WPILib.h"

class Thing
{
	
	Victor DVictor;
	Encoder LEnc, REnce; 
	float deadband;
	PIDController Spd;
	Timer inittimer;
	
public:
	//void SetVariables(float Magnitude, float DirectionRadians, float Twist);
	Thing(void):
		DVictor(ONLY_VICTOR),
		LEnc(LENC,true,CounterBase::k4X),
		LSpd( 0.000/*1*/, -0.002, &LEnc, &DVictor)
	{
		deadband = .1;
		//PID
		Spd.SetAbsoluteTolerance(.01);
		Spd.SetOutputRange(-1,1);
		RightDriveEncoder.SetDistancePerPulse(0.05026548);
		//Other Sets
		//Potfeedbackmax = 850;
		//Potfeedbackmin = 50;
	}
	void Setspeed(float axis);

private:
	
};

#endif
