#ifndef THING_H
#define THING_H
#include "Schematic.h"
#include "cmath"
#include "WPILib.h"

class Thing
{
	
	Victor LDVictor;
	Encoder LEnc; 
	float deadband;
	PIDController LSpd;
	Timer inittimer;
	
public:
	//void SetVariables(float Magnitude, float DirectionRadians, float Twist);
	Thing(void):
		LDVictor(L_VICTOR),
		LEnc(LENC,true,CounterBase::k4X),
		LSpd( LP,0, 0, &LEnc, &LDVictor)
	{
		deadband = .1;
		//PID
		LSpd.SetAbsoluteTolerance(.01);
		LSpd.SetOutputRange(-1,1);
		LEnc.SetDistancePerPulse(0.05026548);
		//Other Sets
		//Potfeedbackmax = 850;
		//Potfeedbackmin = 50;
		max = .8;
	}
	void Setspeed(float axis);

private:
	double crate;
	double max;
};

#endif
